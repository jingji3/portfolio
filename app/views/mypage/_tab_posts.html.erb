<div class="px-10">
  <div class="flex justify-end mb-2">
    <%= link_to "シェアする", new_post_path, class: "btn btn-primary btn-sm" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @posts.each do |post| %>
      <%= render 'shared/posts', post: post %>
    <% end %>
  </div>
</div>
