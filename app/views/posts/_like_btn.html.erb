<%
  variant = local_assigns[:variant] || :medium
  styles = ComponentStyles::BUTTON[variant]
%>

<div id="post_<%= post.id %>_like">
  <% if post.liked_by?(current_user) %>
    <%= button_to post_likes_path(post, variant: variant), method: :delete, class: "flex items-center gap-1" do %>
      <i class="fas fa-thumbs-up <%= styles[:icon] %>"></i>
      <span  class="<%= styles[:count] %>"><%= post.likes.count %></span>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post, variant: variant), data: { turbo_method: :post }, class: "flex items-center gap-1 text-gray-500 hover:text-red-300 transition-colors duration-200" do %>
      <i class="fas fa-thumbs-up <%= styles[:icon] %>"></i>
      <span class="<%= styles[:count] %>"><%= post.likes.count %></span>
    <% end %>
  <% end %>
</div>
