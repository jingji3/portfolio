<div class="top-wrapper relative overflow-hidden">
  <!-- 画面を左右に分割するグリッドレイアウト -->
  <div class="grid grid-cols-2">

    <!-- 左側 - メニューとボタン -->
    <div class="relative z-10 mt-20 ml-10">
      <!-- 検索セクション -->
      <div class="mb-10">
        <h2 class="text-white text-xl mb-4">-SEARCH-</h2>
        <div class="flex flex-col gap-8">
          <button class="bg-white bg-opacity-60 hover:bg-opacity-70 text-left px-2 py-1 w-1/3 rounded-sm text-black font-semibold transition">
            <%= link_to t('.video_search'), '#' %>
          </button>
          <button class="bg-white bg-opacity-60 hover:bg-opacity-70 text-left px-2 py-1 w-1/3 rounded-sm text-black font-semibold transition">
            <%= link_to t('.team_search'), '#' %>
          </button>
        </div>
      </div>

      <!-- シェアセクション -->
      <div>
        <h2 class="text-white text-xl mb-4">-SHARE-</h2>
        <div class="flex flex-col gap-8">
          <button class="bg-white bg-opacity-60 hover:bg-opacity-70 text-left px-2 py-1 w-1/3 rounded-sm text-black font-semibold transition">
            <%= link_to t('.video_share'), '#' %>
          </button>
          <button class="bg-white bg-opacity-60 hover:bg-opacity-70 text-left px-2 py-1 w-1/3 rounded-sm text-black font-semibold transition">
            <%= link_to t('.team_rating'), '#' %>
          </button>
        </div>
      </div>
    </div>

    <!-- 右側 - タイトルとロゴ -->
    <div class="relative z-10 flex-col justify-center items-end pr-10 mt-20">
      <h1 class="text-8xl font-bold tracking-wider text-left m-4">
        <span class="block text-white text-shadow-glow">GENSHIN</span>
        <span class="block text-white text-shadow-glow">TEAM</span>
        <div class="grid grid-cols-6 text-left text-shadow-glow">
          <div class="col-span-1">
            <span class="text-8xl text-white tracking-wider">S</span>
          </div>
          <div class="col-span-5 flex flex-col m-1">
            <span class="text-4xl text-white tracking-wider">EARCH</span>
            <span class="text-4xl text-white tracking-wider">HARE</span>
          </div>
        </div>
      </h1>
    </div>
  </div>
</div>
