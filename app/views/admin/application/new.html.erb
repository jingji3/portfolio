<% content_for(:title) do %>
  <%= t("administrate.actions.new_resource",
         name: display_resource_name(page.resource_name).titleize) %>
<% end %>

<header class="container mx-auto px-4 py-8 flex gap-2 flex-between">
  <div class="flex">
    <h1 class="text-3xl font-bold mb-6">
      <%= content_for(:title) %>
    </h1>
  </div>

  <div class="flex">
    <%= link_to t("administrate.actions.back"), url_for(action: :index), class: "btn btn-outline" %>
  </div>
</header>

<section class="">
  <%= render "form", page: page %>
</section>
