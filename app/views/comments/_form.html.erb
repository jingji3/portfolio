<div class="mb-3" id="comment-form">
  <%= form_with model: comment, url: post_comments_path(post), local: false do |f| %>
    <%= render 'shared/error_message', object: f.object %>
    <div class="flex items-end mb-2">
      <%= f.label t('comments.title'), class: "text-lg" %>
      <div class="ml-3 text-gray-500 text-sm">(<%= post.comments.count %><%= t('comments.counts') %>)</div>
    </div>
    <div class="flex gap-2 items-end">
      <%= f.text_area :comment, class: "input input-bordered w-full h-12 p-1 text-sm",rows: "3", placeholder:"コメントを投稿..." %>
      <%= f.submit t('defaults.create'), class: "btn bg-gray-500 text-white hover:opacity-80 btn-sm" %>
    </div>
  <% end %>
</div>
