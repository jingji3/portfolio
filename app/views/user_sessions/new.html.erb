<div class="container mx-auto px-4 mt-8">
  <div class="max-w-sm mx-auto">
    <h1 class="text-3xl font-bold mb-6"><%= t('.title') %></h1>
    <%= form_with url: login_path do |f| %>
      <div class="form-control w-full mb-4">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input input-bordered w-full" %>
      </div>
      <div class="form-control w-full mb-4">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input input-bordered w-full" %>
      </div>
      <div class="mt-8">
        <%= f.submit t('.login'), class: "btn btn-primary w-full" %>
      </div>
    <% end %>
    <div class="mt-8">
      <%= button_to auth_at_provider_path(provider: :google), method: :post, data: { turbo: false }, class: "btn w-full" do %>
          <svg aria-label="Google logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><g><path d="m0 0H512V512H0" fill="#fff"></path><path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path><path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path><path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path><path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path></g></svg>
          Google でログイン
      <% end %>
    </div>

    <div class="text-center mt-4 mb-8 flex flex-col">
      <%= link_to t('.to_register_page'), new_user_path, class: "link link-hover text-primary m-1" %>
      <%= link_to t('.password_forget'), new_password_reset_path, class: "link link-hover text-primary m-1" %>
    </div>
  </div>
</div>
