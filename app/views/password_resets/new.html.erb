<div class="container max-auto px-4 mt-8">
  <div class="max-w-sm mx-auto">

    <h1 class="text-3xl font-bole mb-6"><%= t('.title') %></h1>
    <%= form_with url: password_resets_path, local: true, method: :post do |f| %>
      <div class="form-control w-full mb-4">
        <%= f.label :email, class: "label" %>
        <%= f.text_field :email, class: "input input-bordered w-full" %>
      </div>
      <div class="mt-8">
        <%= f.submit t('password_resets.new.submit'), class:"btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>
