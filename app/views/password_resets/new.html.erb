<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-4">
  <div class="max-w-sm mx-auto">
    <h1 class="text-2xl md:text-3xl font-bold mb-6"><%= t('.title') %></h1>
    <%= form_with url: password_resets_path, local: true, method: :post do |f| %>
      <div class="form-control w-full mb-4">
        <%= f.label :email, class: "label" %>
        <%= f.text_field :email, class: "input input-bordered w-full" %>
      </div>
      <div class="mt-8">
        <%= f.submit t('password_resets.new.submit'), class:"btn bg-gray-500 w-full text-white hover:opacity-80 w-full" %>
      </div>
    <% end %>
  </div>
</div>
