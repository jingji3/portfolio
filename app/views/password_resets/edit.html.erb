<div class="container max-auto px-4 mt-8">
  <div class="max-w-sm mx-auto">

    <h1 class="text-3xl font-bole mb-6"><%= t('.title') %></h1>
    <%= form_for @user, :url => password_reset_path(@token), :html => {:method => :put} do |f| %>
      <%= render 'shared/error_message', object: @user %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %></h2>
          
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
    
      <div class="form-control w-full mb-4">
        <%= f.label :email, class: "label" %>
        <%= @user.email %>
      </div>
      <div class="form-control w-full mb-4">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input input-bordered w-full" %>
      </div>
      <div class="form-control w-full mb-4">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
      </div>
      <div class="actions mt-8">
        <%= f.submit t('helpers.submit.update'), class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>

