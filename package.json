{
  "name": "app",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^7.3.0",
    "animate.css": "^4.1.1",
    "aos": "^2.3.4",
    "daisyui": "5.0.9",
    "jquery": "^3.7.1",
    "tailwindcss": "3.4.16",
    "tom-select": "^2.4.3"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.25.1",
    "postcss": "^8.4.23",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2"
  },
  "scripts": {
    "build:css": "postcss ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --config ./postcss.config.js",
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --external:@hotwired/stimulus-loading",
    "build": "yarn build:js && yarn build:css",
    "dev:css": "postcss ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --config ./postcss.config.js --watch",
    "dev:js": "esbuild app/javascript/application.js --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch"
  }
}
